<h1>Register</h1>
 
<% form_for @user do |f| %>
  <p>
  <%= f.error_messages %>
  <%= f.label :email %><br />
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label :password %><br />
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday %>
  </p>
  <%= f.submit "Register" %>
<% end %>

<%= link_to 'Back', users_path %>